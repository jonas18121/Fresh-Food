{% extends "base.html.twig" %}

{% block title 'Inscription' %}

{% block body %}
<div class="form__container">
    {{ form_start(form, { 'attr' : { 'class' : 'form' }} ) }}
    <div class="form__group">
        <label for="inputPseudo">Nom d'utilisateur</label>
        {{ form_widget(form.pseudo, {attr : {class : 'form__control' }})}}
        {{ form_errors(form.pseudo) }}
    </div>
    <div class="form__group">
        <label for="inputEmail">Email</label>
        {{ form_widget(form.email, {attr : {class : 'form__control' }})}}
        {{ form_errors(form.email) }}
    </div>
    <div class="form__group">
        <label for="inputPassword">Mot de passe</label>
        {{ form_widget(form.password, {attr : {class : 'form__control' } }) }}
        {{ form_errors(form.password) }}
    </div>
    <div class="form__group">
        <label for="inputPassword">Confimation mot de passe</label>
        {{ form_widget(form.confirm_password, {attr : {class : 'form__control'} })}}
        {{ form_errors(form.confirm_password) }}
    </div>
    <div class="form__group">
        <label for="inputImage">Photo de profil (Facultatif)</label>
        {{ form_widget(form.image.file, {attr : {class : 'form__control'} } ) }}
        {{ form_errors(form.image.file) }}
    </div>
    <div class="form__actions">
       <a href="{{ path('security_login')}}">Vous avez un compte ? Connectez-vous</a> 
    </div>
    <button type="submit" class="btn__submit">S'incrire</button>
    {{ form_end(form) }}
</div>
{% endblock body %}