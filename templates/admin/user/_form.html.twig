<div class="form__container">
    {{ form_start(form, {attr: {class: 'form'}})}}
    <div class="form__group">
        <label for="inputEmail">Pseudo</label>
        {{ form_widget(form.pseudo, { 'attr' : { 'class' : 'form__control'}})}}
        {{ form_errors(form.pseudo) }}
    </div>
    <div class="form__group">
        <label for="inputEmail">Email</label>
        {{ form_widget(form.email, { 'attr' : { 'class' : 'form__control'}})}}
        {{ form_errors(form.email) }}

    </div>
    <div class="form__group">
        <label for="inputPassword">Mot de passe</label>
        {{ form_widget(form.password, { 'attr' : { 'class' : 'form__control'} } ) }}
        {{ form_errors(form.password) }}
    </div>
    <div class="form__group">
        <label for="inputRoles">RÃ´le(s)</label>
        {{ form_widget(form.roles, { 'attr' : { 'class' : 'form__control'} } ) }}
        {{ form_errors(form.roles) }}
    </div>
    <div class="form__btn">
        <button type="submit" class="btn__submit">{{ action }}</button>
        <a href="{{ path('admin_user_index') }}">Retour</a>
    </div>
    {{ form_end(form)}}
</div>