
{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}

    {% if not form.vars.valid %}
        <alert-message duration="6">
            {{ form_errors(form) }}
        </alert-message>
    {% endif %}

    {{ form_start(form, { 'attr' : { 'class' : 'form_card'} })}}

    <h1 class="form_card_h1"><span class='span_h1'>Contactez-nous</span></h1>

    <div class="form_card_div">
        <label for="inputSujet" class="form_card_label">Pseudo</label>
        {{ form_widget(form.pseudo, {attr : {class : 'form_card_input'}}) }}
        {{ form_errors(form.pseudo) }}
    </div>

    <div class="form_card_div">
        <label for="inputSujet" class="form_card_label">Email</label>
        {{ form_widget(form.email, {attr : {class : 'form_card_input'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form_card_div">
        <label for="inputSujet" class="form_card_label">Sujet</label>
        {{ form_widget(form.subject, {attr : {class : 'form_card_input'}}) }}
        {{ form_errors(form.subject) }}
    </div>

    <div class="form_card_div">
        <label for="inputMessage" class="form_card_label" rows="3">Message</label>
        {{ form_widget(form.message, {attr : {class : 'form_card_input'}}) }}
        {{ form_errors(form.message) }}
    </div>
    <button class="form_card_submit">Envoyer</button>
{{ form_end(form)}}
{% endblock %}
